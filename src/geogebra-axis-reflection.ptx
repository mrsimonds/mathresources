<section xmlns:xi="http://www.w3.org/2001/XInclude" xml:lang="en-US" xml:id="geogebra-axis-reflection">
  <title>Graphical Transformations - Axis Reflections</title>

  <figure xml:id="fgeogebra-axis-reflection-geogebra">
    <caption>Use the buttons to change the sign on <m>x</m> or <m>f(x)</m>.</caption>
    <interactive platform="geogebra" width="100%" aspect="9:5">
      <slate surface="geogebra" aspect="9:5" source="geogebra/function-reflections.ggb">
        setPerspective("G");
        setAxisSteps(1, 1, 1, 1);
        setCoordSystem(-8, 8, -8, 8);
        setGridVisible(1);         
        setAxisLabels(1,"x","y","z");
      </slate>
    </interactive>
  </figure>

</section>
