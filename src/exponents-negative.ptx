    <exercises>

      <exercisegroup cols="2">
        <introduction>
          <p>
            Completely simplify each expression.  Make sure that your final expression contains no negative exponents.
          </p>
        </introduction>
        <exercise>
          <statement>
            <p>
              <m>t^{-6}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>t^{-6}=\frac{1}{t^6}</m>
            </p>         
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>2y^{-6}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                2y^{-6}\amp=2\times\frac{1}{y^6}\\
                \amp=\frac{2}{y^6}
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>-t^{-6}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>-t^{-6}=-\frac{1}{t^6}</m>
            </p>       
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>-4a^{-2}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                -4a^{-2}\amp=-4\times\frac{1}{a^2}\\
                \amp=-\frac{4}{a^2}
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>x^{-9}x^5</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                x^{-9}x^5\amp=x^{-9+5}\\
                \amp=x^{-4}\\
                \amp=\frac{1}{x^4}
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>\frac{1}{x^{-3}}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \frac{1}{x^{-3}}=x^3
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>\frac{3y^{-6}}{y^2}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                \frac{3y^{-6}}{y^2}\amp=\frac{3}{y^6y^2}\\
                \amp=\frac{3}{y^8}
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>\frac{x^{-4}}{x^{-9}}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                \frac{x^{-4}}{x^{-9}}\amp=\frac{x^9}{x^4}\\
                \amp=x^5
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>\frac{1}{4a^{-2}}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \frac{1}{4a^{-2}}=\frac{a^2}{4}
              </m>
            </p>
          </solution>
        </exercise>


      </exercisegroup>
      <exercisegroup cols="2">
        <introduction>
          <p>
            Determine the value of each expression.  Your final result should not include any exponents.
          </p>
        </introduction>

        <exercise>
          <statement>
            <p>
              <m>\frac{1}{3^{-2}}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                \frac{1}{3^{-2}}\amp=3^2\\
                \amp=9
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>-2^{-3}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                -2^{-3}\amp=-\frac{1}{2^3}\\
                \amp=-\frac{1}{8}
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>\left(\frac{2}{5}\right)^{-2}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                \left(\frac{2}{5}\right)^{-2}\amp=\left(\frac{5}{2}\right)^2\\
                \amp=\frac{25}{4}
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>\left(\frac{1}{4}\right)^{-3}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                \left(\frac{1}{4}\right)^{-3}\amp=\left(\frac{4}{1}\right)^3\\
                \amp=64
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>-4^2</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                -4^2=-16
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>4^{-2}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                4^{-2}\amp=\frac{1}{4^2}\\
                \amp=\frac{1}{16}
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>-4^{-2}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                -4^{-2}\amp=-\frac{1}{4^2}\\
                \amp=-\frac{1}{16}
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>(-4)^{-2}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                (-4)^{-2}\amp=\frac{1}{(-4)^2}\\
                \amp=\frac{1}{16}
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>\left(\frac{1}{3}\right)^{-3}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                \left(\frac{1}{3}\right)^{-3}\amp=\left(\frac{3}{1}\right)^3\\
                \amp=27
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>-7^{-1}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                -7^{-1}=-\frac{1}{7}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>\frac{10^{-5}}{10^{-8}}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                \frac{10^{-5}}{10^{-8}}\amp=\frac{10^8}{10^5}\\
                \amp=10^3\\
                \amp=1,000
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>\frac{1}{2^{-8}}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                \frac{1}{2^{-8}}\amp=2^8\\
                \amp=256
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>\left(-\frac{2}{3}\right)^{-4}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                \left(-\frac{2}{3}\right)^{-4}\amp=\left(-\frac{3}{2}\right)^4\\
                \amp=\frac{81}{16}
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>-4^0-4^{-2}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                -4^0-4^{-2}\amp=-1-\frac{1}{4^2}\\
                \amp=-1-\frac{1}{16}\\
                \amp=-\frac{17}{16}
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>\left(\frac{5}{4}\right)^{-2}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                \left(\frac{5}{4}\right)^{-2}\amp=\left(\frac{4}{5}\right)^2\\
                \amp=\frac{16}{25}
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

        <exercise>
          <statement>
            <p>
              <m>\frac{4}{3^{-2}}</m>
            </p>
          </statement>
          <solution>
            <p>
              <m>
                \begin{aligned}[t]
                \frac{4}{3^{-2}}\amp=4\times 3^2\\
                \amp=36
                \end{aligned}
              </m>
            </p>
          </solution>
        </exercise>

      </exercisegroup>

    </exercises>

