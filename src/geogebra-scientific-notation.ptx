<section xmlns:xi="http://www.w3.org/2001/XInclude" xml:lang="en-US" xml:id="geogebra-scientific-notation">
  <title>Scientific Notation</title>

  <figure xml:id="scientific-notation-geogebra">
    <caption>Use the slider to change the exponents on 10.</caption>
    <interactive platform="geogebra" width="100%" aspect="9:5">
      <slate surface="geogebra" aspect="9:5" source="geogebra/scientific-notation-slider.ggb">
        setPerspective("G");
        setGridVisible(0); 
        setAxesVisible(0,0);        
      </slate>
    </interactive>
  </figure>


</section>
