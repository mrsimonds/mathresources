<section xmlns:xi="http://www.w3.org/2001/XInclude" xml:lang="en-US" xml:id="geogebra-intercepts-of-a-line">
  <title>Determine the Intercepts of a Line Stated in Standard Form</title>

  <figure xml:id="geogebra-intercepts-of-a-line-geogebra">
    <caption>Determine the intercepts of the line with the given equation.</caption>
    <interactive platform="geogebra" width="100%" aspect="9:5">
      <slate surface="geogebra" aspect="9:5" source="geogebra/standard-line.ggb">
        setPerspective("G");
        setAxisSteps(1, 1, 1, 1);
        setCoordSystem(-6, 6, -6, 6);
        setGridVisible(1);         
        setAxisLabels(1,"x","y","z");
      </slate>
    </interactive>
  </figure>

</section>
